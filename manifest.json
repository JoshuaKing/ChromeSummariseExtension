{
	"manifest_version": 2,
	"name": "tl;dr Summarizer",
	"description": "tl;dr Summarizer finds long comments on Reddit and summarises them! In fact, you can summarise any lengthy article online.",
	"version": "0.1",
	
	"icons": {
		"16": "tldrcontext.png",
		"128": "tldr.png"
	},
	
	"background": {
		"scripts": ["background.js"]
	},
	
	"content_scripts": [{
		"matches": ["http://*/*"],
		"css": ["summary.css"],
		"js": ["jquery.js", "summariser.js", "summary.js"]
	}],
	
	"permissions": [
		"tabs", "http://*/*", "contextMenus"
	]
}